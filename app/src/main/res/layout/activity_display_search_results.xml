<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_search_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ofir.bopofinal.Search.DisplaySearchResultsActivity">

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:id="@+id/tvPName"
        android:layout_marginStart="2dp"
        android:text="Name" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PersonRecyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvPName"></android.support.v7.widget.RecyclerView>

    <TextView
        android:text="No results to show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/tvNoResults"
        android:layout_alignTop="@+id/recyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp" />


</RelativeLayout>
